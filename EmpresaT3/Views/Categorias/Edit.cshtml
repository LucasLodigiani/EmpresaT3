@model EmpresaT3.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <p>CUIDADO, AL EDITAR LA CATEGORÍA NO SE MODIFICAN EN LOS PRODUCTOS REGISTRADOS Y ESTOS SE PERDERAN.</p>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Categorias" class="control-label"></label>
                <input asp-for="Categorias" class="form-control" />
                <span asp-validation-for="Categorias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
