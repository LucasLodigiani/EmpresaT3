@model EmpresaT3.Models.Contacto
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


@{
    ViewData["Title"] = "Delete";
}
@{
    Layout = null;
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contacto</h4>
    <hr />
    <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
          <div class="card-header">@Html.DisplayFor(model => model.Email)</div>
          <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
            <p class="card-text" style="color:chartreuse">@Html.DisplayFor(model => model.Fecha)</p>
            <p class="card-text">@Html.DisplayFor(model => model.Mensaje)</p>
            
            <p class="card-text" style="color:burlywood">>Dirección IP Protegida</p>
          </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="MensajesLista">Volver</a>
    </form>
</div>
